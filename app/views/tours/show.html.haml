-tour = Tour.find(params[:tour_id])
-user = User.find(@current_user.id)
:javascript
  var msites = #{@sites}
%html
  %head
    %meta{:content => "initial-scale=1.0, user-scalable=no", :name => "viewport"}/
    %script{:src => "http://maps.googleapis.com/maps/api/js?libraries=places&sensor=false", :type => "text/javascript"}
  %body
    %h1 Battle of Kitten Ridge
    %br
      %p{:align => "right"}
        Find location:
        %input#searchTextField{:type => "text"}
      #profile_button
        =button_to 'Back to Profile',{:controller=>'sessions',:action=>'profile',:user_id=> current_user.id},{:class => 'btn btn-large btn-primary'}
      #site_form
        =button_tag "Save Sites", {:class => 'btn btn-large btn-primary'} 
      #map_canvas
    #preview
    %h2
      ="File Library:"
    #folder_form
      = render :template=>'folders/new',:remote=>true
    #file_explorer
      -if !user.folders.empty?
        %table{:class=>"table table-condensed"}
          -user.folders.reverse.each do |folder|
            -if folder.id?
              = render folder
      
    
